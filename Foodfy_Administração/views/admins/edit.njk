{% extends "admins/layout.njk" %}

{% block style %}
    <link rel="stylesheet" href="/styles/admin_edit.css">
{% endblock style %}

{% block content %}

    <form class="recipe" method="POST" action="/admin/recipes?_method=PUT">
        <section class="details">

            <div class="title">
                <h3>Editando receita</h3>
                <div class="buttons">
                    <button id="btn_delete" type="submit" form="form_delete">Deletar</button>
                    <button type="submit">Salvar receita</button>
                </div>
            </div>

            {% include "admins/fields.njk" %}

            <input type="hidden" name="id" value="{{ recipe.id }}">

        </section>
    </form>

{% endblock content %}

{% block script %}
    <script src="/scripts/admin_add.js"></script>
{% endblock script %}