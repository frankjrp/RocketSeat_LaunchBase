{% extends "admins/layout.njk" %}

{% block style %}
    <link rel="stylesheet" href="/styles/admins/chefs.css">
{% endblock style %}

{% block head %}
    <title>Chefs</title>
{% endblock head %}

{% block content %}

    <main>

        <div class="cards-title">
            <p>Gerenciar chefs</p>
            <a href="/admin/chefs/create">Criar chef</a>
        </div>

        <section class="cards">

            {% for chef in chefs %}

                <div class="card">
                    <div class="image-container">
                        <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
                    </div>

                    <div class="card-content">
                        <p>{{ chef.name }}</p>
                        <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                    </div>
                </div>

            {% endfor %}

        </section>

        <div class="pagination"
                data-page = {{pagination.page}}
                data-total = {{pagination.total}}
        ></div>

    </main>

{% endblock content %}

{% block script %}
    <script src="/scripts/paginate.js"></script>
{% endblock script %}