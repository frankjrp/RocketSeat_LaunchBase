{% extends "users/layout.njk" %}

{% block style %}
    <link rel="stylesheet" href="/styles/users/recipes.css">
{% endblock style %}

{% block head %}
    <title>Receitas</title>
{% endblock head %}

{% block content %}

    <main>

        <section class="cards">

            {% for recipe in recipes %}

                <div class="card">
                    <div class="image-container">
                        <a href="/recipes/{{ recipe.id }}">
                            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                        </a>
                    </div>

                    <div class="card-content">
                        <p id="name">{{ recipe.title }}</p>
                        <p id="by">por {{ recipe.chef_name }}</p>
                    </div>
                </div>

            {% endfor %}

        </section>

        <div class="pagination"
                data-page = {{pagination.page}}
                data-total = {{pagination.total}}
                data-filter = {{filter}}
        ></div>

    </main>

{% endblock content %}

{% block script %}
    <script src="/scripts/users/paginate.js"></script>
{% endblock script %}